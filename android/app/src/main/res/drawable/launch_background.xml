<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient 
                android:startColor="#3F768E"
                android:centerColor="#5A8AA0"
                android:endColor="#759BB2"
                android:angle="135" />
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="oval">
            <size android:width="300dp" android:height="300dp"/>
            <gradient 
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="radial"
                android:gradientRadius="150dp" />
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size android:width="120dp" android:height="40dp"/>
            <corners android:radius="20dp"/>
            <solid android:color="#20FFFFFF"/>
        </shape>
    </item>
    <item android:gravity="center">
        <inset android:insetTop="5dp">
            <shape android:shape="rectangle">
                <size android:width="80dp" android:height="6dp"/>
                <corners android:radius="3dp"/>
                <solid android:color="#FFFFFF"/>
            </shape>
        </inset>
    </item>
</layer-list>
